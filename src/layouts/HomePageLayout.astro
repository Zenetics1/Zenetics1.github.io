---
import HMHeader from '../components/NavBar.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";
import { ClientRouter, slide } from "astro:transitions";
import { fade } from 'astro:transitions';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html transition:animate={fade({duration: "0.9s"})} lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="WiZK About Me" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="https://unpkg.com/typed.js@2.1.0/dist/typed.umd.js"></script>
		<ClientRouter/>
	</head>
	<body transition:animate={fade({duration: "0.9s"})}  class="bg-fixed bg-black bg-no-repeat bg-cover overflow-hidden" style="background-image:url(/webimg2.jpg);">
		<div transition:animate="none" class="box-border h-24 w-screen z-50">
			<HMHeader webTitle='WIZK' hrefAM='/' hrefPF='/portfolio' hrefCM='mailto:wizktec@gmail.com'></HMHeader>
		</div>
		<div class="h-[calc(100dvh-6rem)] flex-col overflow-auto overscroll-none">
			<div class="top-10 p-7 box-border h-full w-full flex flex-wrap justify-center items-center">
				<slot />
				
				<div class="relative top-7">
					<Footer></Footer>
				</div>
				
			</div>
		</div>
	</body>
</html>