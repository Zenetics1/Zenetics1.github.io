---
import "../styles/global.css";
interface Props {
	webTitle: string;
	hrefAM: string;
	hrefPF: string;
	hrefCM: string;
}

const { webTitle, hrefAM, hrefPF, hrefCM } = Astro.props;
---
		<nav class="bg-white w-screen font-mono sm:p-2 m-0 h-24 flex items-center z-50">
			<div class="flex items-center">
				<span class="transition ease-in-out delay-75 hover:scale-110 text-bold text-transparent bg-clip-text bg-gradient-to-r from-red-800 via-red-500 to-yellow-500 inline-block justify-start pl-10 text-5xl sm:text-6xl">
					{webTitle}
				</span>
			</div>
			<ul class="flex items-center gap-11 p-0 ml-auto mr-10 text-md sm:text-2xl">
				<li class="transition ease-in-out delay-75 hover:scale-105 hover:text-red-500 hidden sm:flex"> 
					<a href={hrefAM}>About Me</a>
				</li>
				<li class="transition ease-in-out delay-75 hover:text-red-500 hover:scale-105 hidden sm:flex"> 
					<a href={hrefPF} data-astro-prefetch="tap">Portfolio</a>
				</li>
				<li class="transition ease-in-out delay-75 hover:text-red-500 hover:scale-105 hidden sm:flex"> 
					<a href={hrefCM} >Contact</a>
				</li>
				<li class="transition ease-in-out delay-75 hover:text-red-500 hover:scale-125 flex sm:hidden">
					<button id="openSidebar">
						<svg xmlns="http://www.w3.org/2000/svg" height="30" viewBox="0 -960 960 960" width="30"><path d="M120-240v-80h720v80H120Zm0-200v-80h720v80H120Zm0-200v-80h720v80H120Z"/></svg>
					</button>
				</li>
			</ul>
		</nav>
			<div id="sideBar" class=" hidden font-mono p-2 m-0 fixed top-0 opacity-100 bg-white h-screen w-screen z-50">
				<ul class="text-3xl m-0 p-5 ">
                    <li>
                        <button id="closeSidebar" class="transition ease-in-out delay-75 hover:scale-125 hover:text-red-500" type="button">
							<svg xmlns="http://www.w3.org/2000/svg" height="30" viewBox="0 -960 960 960" width="30"><path d="m256-200-56-56 224-224-224-224 56-56 224 224 224-224 56 56-224 224 224 224-56 56-224-224-224 224Z"/></svg>
						</button>
                    </li>
					<li class="text-center transition ease-in-out delay-75 hover:scale-105 hover:text-red-500"> 
						<a href={hrefAM} data-astro-prefetch="tap">
							About Me
						</a>
					</li>
					<li class="text-center transition ease-in-out delay-75 hover:text-red-500 hover:scale-105"> 
						<a href={hrefPF} data-astro-prefetch>
							Portfolio
						</a>
					</li>
					<li class="text-center transition ease-in-out delay-75 hover:text-red-500 hover:scale-105"> 
						<a href={hrefCM} data-astro-prefetch="tap">
							Contact
						</a>
					</li>
				</ul>
			</div>
		
		
	<script>
		document.addEventListener('astro:page-load', (event)=>{
			const openButton = document.getElementById("openSidebar")?.addEventListener("click", ()=>{
				document.getElementById("sideBar")?.classList.remove("hidden");
			});
			const closeButton = document.getElementById("closeSidebar")?.addEventListener("click", ()=>{
				document.getElementById("sideBar")?.classList.add("hidden");
			}
			);
			
		});		
	</script>
		